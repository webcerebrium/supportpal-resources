{% extends parent_template %}

{% block title %}{{ Lang.get('ticket.open_new') }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    {{ Lang.get('ticket.open_new') }}
{% endblock %}

{% block content %}

    {{ form_open({ 'route': [ 'ticket.frontend.ticket.storeStep2' ], 'class': 'validate' }) }}

        {{ form_hidden('department', department.id) }}

        <h2>{{ Lang.get('ticket.enter_your_details') }}</h2>

        

        <p>{{ Lang.get('ticket.enter_user_details') }}</p>

        

        <div class="form-container first">

            <div class="form-row">
                {{ form_label('firstname', Lang.get('user.firstname')) }}
                <div class="input-container">
                    {{ form_text('firstname') }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label('lastname', Lang.get('user.lastname')) }}
                <div class="input-container">
                    {{ form_text('lastname') }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label('email', Lang.get('general.email')) }}
                <div class="input-container">
                    {{ form_email('email') }}
                </div>
            </div>

            {% if Config.get('settings.organisations_enabled') %}
                <div class="form-row">
                    {{ form_label('organisation', Lang.choice('user.organisation', 1)) }}
                    <div class="input-container">
                        {{ form_text('organisation') }} &nbsp;
                        <span class="description">({{ Lang.get('general.optional') }})</span>
                    </div>
                </div>
            {% endif %}

        </div>

        <div class="form-button">
            {{ form_submit(Lang.choice('Skriv melding', 1)) }}
        </div>
        <hr>
        <p style="font-size: 26px;text-align: center;margin: 1.75em 0 1em;line-height: 1.5;">Du kan også treffe oss på telefon:<br><strong><a class="fs-dynamic-number" href="tel:67414190">67 41 41 90</a></strong><br><span class="light">(man-tor: 09-16 fre: 09-14)</span></p>
        <p style="text-align: center;">Pga mye trafikk er det ofte kø på våre telefoner, forsøk gjerne kontaktskjemaet over først.</p>
        <strong><p style="text-align: center;"><a href="/spørsmål-svar-faq">Finn svar på vanlige spørsmål (FAQ)</a></p></strong>
        <strong><p style="text-align: center;"><a href="/bruksanvisninger">Last ned bruksanvisninger</a></p></strong>
    {{ form_close() }}

{% endblock %}

{% block scripts_footer %}
    {% if jsValidator|default is not empty %}
        {{ jsValidator|raw }}
    {% endif %}
{% endblock %}